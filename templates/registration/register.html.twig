{% extends "base.html.twig" %}

{% block title %}Inscription - EventMaster{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">S'inscrire à EventMaster</h1>

        {{ form_start(registrationForm) }}

        {# Afficher toutes les erreurs du formulaire #}
        {{ form_errors(registrationForm) }}

        {# Afficher les erreurs spécifiques #}
        {{ form_errors(registrationForm.email) }}
        <div class="mb-3">
            <label for="{{ registrationForm.email.vars.id }}" class="form-label">Email</label>
            {{ form_widget(registrationForm.email, {
                'attr': {'class': 'form-control', 'placeholder': 'votre@email.com'}
            }) }}
        </div>

        {{ form_errors(registrationForm.plainPassword) }}
        <div class="mb-3">
            <label for="{{ registrationForm.plainPassword.vars.id }}" class="form-label">Mot de passe</label>
            {{ form_widget(registrationForm.plainPassword, {
                'attr': {'class': 'form-control', 'placeholder': 'Choisissez un mot de passe'}
            }) }}
        </div>

        <button type="submit" class="btn btn-primary">S'inscrire</button>

        {{ form_end(registrationForm) }}

        <p class="mt-3">
            Déjà un compte ? <a href="{{ path('app_login') }}">Se connecter</a>
        </p>
    </div>
{% endblock %}
